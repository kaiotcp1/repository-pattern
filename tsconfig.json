{
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@controllers/*": ["controllers/*"],
      "@repositories/*": ["repositories/*"],
      "@services/*": ["services/*"],
      "@interfaces/*": ["interfaces/*"],
      "@dtos/*": ["dtos/*"],          // Adiciona mapeamento para a pasta dtos
      "@schemas/*": ["schemas/*"]      // Adiciona mapeamento para a pasta schemas
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
